<Screener>:
    MainScreen:
    InfoScreen:
    MoreInfoScreen:
    ConfigScreen:
<MainScreen>:
    name: 'main_screen'
    MainMenu:
<ConfigScreen>:
    name: 'config_screen'
    ConfigMenu:
<InfoScreen>:
    name: 'info_screen'
<MoreInfoScreen>:
    name: 'moreinfo_screen'
<InfoMenu>:
    direction: 'right'
<StandardLabel>:
    valign: 'middle'
    halign: 'right'
    font_size: 25
<MainMenu>:
    orientation: 'vertical'
    StandardLabel:
        text: 'Wood Division'
    StandardLabel:
        text: 'When you need to know who to blame'
    Button:
        text: 'Configuration'
        on_release:
            root.reset_transition()
            app.root.current = 'config_screen'
    Button:
        text: 'Launch'
        on_release: root.lookup()
    StandardLabel:
        text: 'Pre-Alpha'
<Popting>:
    size_hint: 0.7, 0.7
    title: 'Oops, something went wrong'
    Label:
        text: 'Are you sure you are in a game?'
        text_size: root.width, None
        size: self.texture_size
        valign: 'middle'
        halign: 'center'
        font_size: 25
<ConfigMenu>:
    cols: 2
    StandardLabel:
        text: 'Config'
    StandardLabel:
        text: 'Yolo'
    StandardLabel:
        text: 'Summoner'
    TextInput:
        id: n_box
        text: root.name
        font_size: 25
        halign: 'center'
        valign: 'middle'
    StandardLabel:
        text: 'Region'
    Button:
        text: root.region
        valign: 'middle'
        haligh: 'center'
        font_size: 25
        on_release: root.pop.open()
    Button:
        text: 'Back'
        on_release: root.back_to_main()
    Button:
        text: 'save'
        on_release: root.set_name(n_box)
<RegionPopup>:
    id: rgnp
    size_hint: 0.7, 0.7
<ErrorPopup>:
    size_hint: 0.7, 0.7
    title: 'Oops, something went wrong'
    Label:
        text: 'Please try again'
        text_size: root.width, None
        size: self.texture_size
        valign: 'middle'
        halign: 'center'
        font_size: 25

