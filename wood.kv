<Screener>:
    MainScreen:
    InfoScreen:
    ConfigScreen:
<MainScreen>:
    name: 'main_screen'
    MainMenu:
<ConfigScreen>:
    name: 'config_screen'
    ConfigMenu:
<InfoScreen>:
    name: 'info_screen'
<InfoMenu>:
    direction: 'right'
<TitleLabel>:
    valign: 'middle'
    halign: 'center'
    font_size: 25
<StandardLabel>:
    valign: 'middle'
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    halign: 'right'
    font_size: 20
    markup: True
<MainMenu>:
    orientation: 'vertical'
    Heading:
        text: 'Wood Division'
    StandardLabel:
        text: 'When you need to know who to blame'
    Button:
        text: 'Configuration'
        on_release:
            root.reset_transition()
            app.root.current = 'config_screen'
    Button:
        text: 'Launch'
        on_release: root.lookup()
    StandardLabel:
        text: 'Pre-Alpha'
<Popting>:
    size_hint: 0.7, 0.7
    title: 'Oops, something went wrong'
    Label:
        text: 'Are you sure you are in a game?'
        text_size: root.width, None
        size: self.texture_size
        valign: 'middle'
        halign: 'center'
        font_size: 25
<ConfigMenu>:
    cols: 2
    Heading:
        text: 'Config'
    Heading:
        text: ' '
    Heading:
        text: 'Summoner'
    TextInput:
        id: n_box
        text: root.name
        font_size: 25
        halign: 'center'
        valign: 'middle'
    Heading:
        text: 'Region'
    Button:
        text: root.region
        valign: 'middle'
        haligh: 'center'
        font_size: 25
        on_release: root.pop.open()
    Button:
        text: 'Back'
        on_release: root.back_to_main()
    Button:
        text: 'save'
        on_release: root.set_name(n_box)
<RegionPopup>:
    id: rgnp
    size_hint: 0.7, 0.7
<ErrorPopup>:
    size_hint: 0.7, 0.7
    title: 'Oops, something went wrong'
    Label:
        text: 'Please try again'
        text_size: root.width, None
        size: self.texture_size
        valign: 'middle'
        halign: 'center'
        font_size: 25
<ScrollBox>:
    cols: 1
    padding: 5
    spacing: 10
#    size_hint_y: None
<Portrait>:
    size_hint_y: None
    size_hint_x: 0.3
<Scroller>:
